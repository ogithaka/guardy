{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@layoutsComponents": ["./app/exports/components/layouts.ts"],
            "@layoutsStyles": ["./app/exports/styles/layouts.ts"],
            "@sharedComponents": ["./app/exports/components/shared.ts"],
            "@sharedStyles": ["./app/exports/styles/shared.ts"],
            "@fonts": ["./app/exports/fonts.ts"],
            "@landingViews": ["./app/exports/components/landing.ts"],
            "@landingViewsStyles": ["./app/exports/styles/landing.ts"],
            "@others": ["./app/exports/components/others.ts"],
            "@othersStyles": ["./app/exports/styles/others.ts"],
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
